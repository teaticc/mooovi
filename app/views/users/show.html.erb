<div class="user_page">
  <header class="user_page-header">
    <div class="yjContainer">
      <a href="">
        <div class="user_image"><%= image_tag 'https://fbcdn-profile-a.akamaihd.net/hprofile-ak-xfp1/v/t1.0-1/c32.0.127.127/10256953_450511921719235_7408583294706772933_n.jpg?oh=4b62cd6d72667f23c3c4781dfc763b61&oe=54D54A3C&__gda__=1423979953_5fc50daca871a07e83167f1afbc8d304' %></div>
        <h2><%= current_user.nickname %><span>さんのマイページ</span></h2>
      </a>
    </div>
  </header>
  <div class="pt1em pb1em" id="contents">  <div id="main_cnt_wrapper">
    <div id="yjContentsBody">
      <div class="yjContainer">
        <ul class="user_page-contents">
          <% @reviews.each do|review| %>
              <a href='/products/<%= review.product.id%>'>
            <li style="background-image: url('<%= review.product.image_url %>')">
              <div class="meta">
                <header>
                  <div class="title"><%= review.product.title%></div>
                  <span class="star"><span class="rating-star"><i class="star-actived rate-100"></i></span></span>
                </header>
                <div class="user_review"><%= review.review %></div>
              </div>
            </li>
            </a>
          <% end %>
        </ul>

      </div>
    </div>
  </div>